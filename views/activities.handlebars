<div class="container-fluid">
  <nav class="navbar navbar-expand-lg d-flex justify-content-center mb-1">
    <p class="h1">Activities</p>
  </nav>
  <form class="workout">
    <div class="row p-2">
      <div class="col-8">
        <p class="h4">Select Workout Time</p>
        <select id="workoutTime" class="mb-2 form-control form-control-default d-inline">
          <option data-value="Early Bird ~Between 4 - 7am">Early Bird ~Between 4 - 7am</option>
          <option data-value="Morning ~Between 8 - 11am">Morning ~Between 8 - 11am</option>
          <option data-value="Afternoon ~Between 12 - 4pm">Afternoon ~Between 12 - 4pm</option>
          <option data-value="Evening ~Between 5 - 8pm">Evening ~Between 5 - 8pm</option>
          <option data-value="Night Owl ~Between 9 - 2am">Night Owl ~Between 9 - 2am</option>
        </select>
      </div>
    </div>
    <div class="row p-2">   
      <div class="col-8">
        <input type="search" class="form-control mb-2" placeholder="Gym Name" id="inputLocation" autocomplete="on" runat="server" >
          <input type="hidden" id="gym" name="gym"/>
          <input type="hidden" id="lat" name="cityLat"/>
          <input type="hidden" id="lng" name="cityLng"/>
      </div>
    </div>
    <div class="row pl-2">
      <div class="col-8 d-flex align-items-end">
        <button type="submit" id="activitiesSubmitButton" class="mb-2 btn btn-large btn-success" data-toggle="modal"
          data-target="#matchesModal">Submit <span class="fa-md" aria-hidden="true"></span> </button>
        <a href="/profile"> <button type="button" class="ml-2 mb-2 btn btn btn-large btn-danger">Previous Page
          <span class="fa-md" aria-hidden="true"></span> </button> </a>

        <!-- Modal -->
        <div class="modal fade" id="matchesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Your Matches</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <!-- Modal Body Content -->
              <div class="modal-body">
                <div class="container-fluid" id="match-content">
                  <!-- Match populated through JQuery-->
                </div>
              </div>
              <!-- <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div> -->
            </div>
          </div>
        </div>

      </div>
    </div>
  </form>
  <div class="row" style="clear:both;">
    <!-- Biking -->
    <div class="activity-square left-activity-square col-6 text-center p-3" id="biking" data-value="Biking">
      <img class="activity-image mb-4" src="images/activityIcons/biking.png" alt="Biking">
      <p class="h2">Biking</p>
    </div>
    <!-- Weights -->
    <div class="activity-square right-activity-square col-6 text-center p-3" id="dumbell" data-value="Weight Lifting">
      <img class="activity-image mb-4" src="images/activityIcons/dumbell.png" alt="Weight Lifting">
      <p class="h2">Weight Lifting</p>
    </div>
  </div>
  <div class="row">
    <!-- Basketball -->
    <div class="activity-square left-activity-square activity-square-body col-6 text-center p-3" id="basketball"
      data-value="Basketball">
      <img class="activity-image mb-4" src="images/activityIcons/basketball.png" alt="Basketball">
      <p class="h2">Basketball</p>
    </div>
    <!-- Swimming -->
    <div class="activity-square right-activity-square activity-square-body col-6 text-center p-3" id="swimming"
      data-value="Swimming">
      <img class="activity-image mb-4 mt-5" src="images/activityIcons/swimming.png" alt="Swimming">
      <p class="h2 mt-4">Swimming</p>
    </div>
  </div>
  <div class="row">
    <!-- Yoga -->
    <div class="activity-square left-activity-square activity-square-body col-6 text-center p-3" id="yoga"
      data-value="Yoga">
      <img class="activity-image mb-4" src="images/activityIcons/yoga.png" alt="Yoga">
      <p class="h2">Yoga</p>
    </div>
    <!-- Running -->
    <div class="activity-square right-activity-square activity-square-body col-6 text-center p-3" id="running"
      data-value="Running">
      <img class="activity-image mb-4" src="images/activityIcons/running.png" alt="Running">
      <p class="h2">Running</p>
    </div>
  </div>
</div>
