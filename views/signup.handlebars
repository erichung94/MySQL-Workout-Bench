          <input type="text" class="form-control" placeholder="First Name" id="inputFirstName">
        </div>
        <div class="form-group col-md-6 mb-4">
          <label for="inputLastName">Last Name</label>
          <input type="text" class="form-control" placeholder="Last Name" id="inputLastName">
        </div>
      </div>

      <label for="inputEmail">Email (Required)</label>
      <input type="email" class="form-control mb-4" placeholder="E-mail" id="email-input">

      <label for="inputPassword">Password (Required)</label>
      <input type="password" class="form-control mb-4" placeholder="Password" id="password-input">

      <button type="submit" class="btn btn-primary btn-block btn-lg" id="loginSubmit">Submit</button>

    </form>


